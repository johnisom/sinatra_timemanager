<form class="flex-vertical spaced-form" action="/sign-in" method="POST">
  <h2>Sign In!</h2>
  <input class="input" type="text" name="username" placeholder="Username" value="<%= params[:username] %>" autofocus>
  <input class="input" type="password" name="password" placeholder="Password">
  <button class="button">Sign In</button>
  <span>Don't have an account? <a href="/sign-up">Sign up!</a></span>
</form>
