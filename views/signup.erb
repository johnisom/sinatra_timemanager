<form class="flex-vertical" id="signup" action="/signup" method="POST">
  <h2>Sign Up!</h2>
  <input class="signin-input" type="text" name="username" placeholder="Username" value="<%= params[:username] %>">
  <input class="signin-input" type="password" name="password" placeholder="Password">
  <button class="signin-input button">Sign Up</button>
</form>
